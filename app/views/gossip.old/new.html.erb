
<form>
<%= form_for @gossip, url: gossips_path, method: :post do |f| %>
  <div class="container">
    <div class="row mt-5 mb-3">
      <%= f.label :title, class: 'form-label' %>
      <%= f.text_field :title %>
    </div>
    <div class="row mb-3">
      <%= f.label :content %>
      <%= f.text_area :content, rows: 5, cols: 40, class: 'form-control' %>
    </div>
    <div class="row mb-3">
      <%= f.submit "Publier le potin !", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
</form>
