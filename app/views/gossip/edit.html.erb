<div class="container">
  <h1 class="my-4">Editer l'article</h1>

  <%= form_for @gossip do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control mb-3' %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control', rows: 5, placeholder: "Contenu de l'article" %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Modifier l'article", class: "btn btn-success mt-5" %>
    </div>
  <% end %>
</div>
